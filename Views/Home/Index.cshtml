@model User
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col">
        <h1 class="text-primary">Register</h1>
        <form class="col" asp-action="CreateUser" asp-controller="Home" method="POST">
            <div class="form-group">
                <fieldset>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    <br>
                    <label class="control-label">First Name</label>
                    <input class="form-control" asp-for="FirstName" type="text">
                </fieldset>
            </div>
            <div class="form-group">
                <fieldset>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                    <br>
                    <label class="control-label">Last Name</label>
                    <input class="form-control" asp-for="LastName" type="text">
                </fieldset>
            </div>
            <div class="form-group">
                <fieldset>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <br>
                    <label class="control-label">Email Address</label>
                    <input class="form-control" asp-for="Email" type="email">
                </fieldset>
            </div>
            <div class="form-group">
                <fieldset>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <br>
                    <label class="control-label">Password</label>
                    <input class="form-control" asp-for="Password" type="password">
                </fieldset>
            </div>
            <div class="form-group">
                <fieldset>
                    <label class="control-label">Confirm Password</label>
                    <input class="form-control" asp-for="Confirm" type="password">
                </fieldset>
            </div>
            <button class="btn btn-success btn-sm" type="submit">Submit</button>
        </form>
    </div>
    <div class="col">
        <partial name="LogRegPartial"/>
    </div>
</div>
